<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addListButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#673AB7"
        android:clickable="true"
        app:backgroundTint="#673AB7"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:fabCustomSize="60dp"
        app:tint="@color/white" />

    <ListView
        android:id="@+id/listOfLists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />

    <TableRow
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#673AB7"
        android:backgroundTint="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/buttonLists"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:drawableTop="@drawable/list_icon"
            android:drawableTint="#FFFFFF"
            android:text="@string/lists"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonStock"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:drawableTop="@drawable/ic_baseline_shopping_bag_24"
            android:drawableTint="#FFFFFF"
            android:text="@string/inventory"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonScan"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:drawableTop="@drawable/ic_baseline_center_focus_strong_24"
            android:drawableTint="#FFFFFF"
            android:text="@string/scan"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonAlert"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:drawableTop="@drawable/ic_baseline_notifications_24"
            android:drawableTint="#FFFFFF"
            android:text="@string/reminder"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonProfil"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#673AB7"
            android:drawableTop="@drawable/ic_baseline_account_box_24"
            android:drawableTint="#FFFFFF"
            android:text="@string/me"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>